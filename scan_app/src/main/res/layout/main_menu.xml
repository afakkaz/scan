<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

    <ImageView
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginBottom="20sp"
            android:layout_marginTop="10sp"
            android:contentDescription="ODKScan title"
            android:src="@drawable/odk_scan_logo"/>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    <Button
            android:id="@+id/ScanButton"
            style="@style/StandardButton"
            android:layout_width="match_parent"
            android:text="@string/scan_new_form">

    </Button>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button
                android:id="@+id/ProcessImageButton"
                style="@style/StandardButton"
                android:layout_width="0dp"
                android:text="@string/process_image_button"
                android:layout_weight="1">

        </Button>

        <Button
                android:id="@+id/ProcessFolderButton"
                style="@style/StandardButton"
                android:layout_width="0dp"
                android:text="@string/process_folder_button"
                android:layout_weight="1">

        </Button>
    </LinearLayout>

    <Button
            android:id="@+id/ViewFormsButton"
            style="@style/StandardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/view_forms_button">

    </Button>

    <Button
            android:id="@+id/InstructionsButton"
            style="@style/StandardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/instructions_button">

    </Button>

    <Button
            android:id="@+id/SettingsButton"
            style="@style/StandardButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/settings_button">

    </Button>

    <TextView
            android:id="@+id/TemplateText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/template_selected"
            android:textSize="20sp"
            android:layout_margin="5sp"/>

    <TextView
            android:id="@+id/version_display"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingBottom="1dp"
            android:paddingTop="6dp"
            android:text="version"
            android:textSize="21dp"
            android:textStyle="bold"/>

</LinearLayout>
